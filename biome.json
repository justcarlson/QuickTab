{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.html",
			"**/*.css",
			"!.wxt",
			"!.output",
			"!node_modules",
			"!dist",
			"!build",
			"!app",
			"!Gruntfile.js",
			"!.planning"
		]
	}
}
